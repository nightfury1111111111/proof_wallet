{
  "manifest_version": 2,

  "name": "Proof",
  "description": "Proof is a browser extension wallet for the Inter blockchain ecosystem.",
  "version": "0.1.0",
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Proof"
  },
  "background": {
    "scripts": ["browser-polyfill.js", "background.bundle.js"],
    "persistent": true
  },
  "permissions": ["storage", "notifications", "identity", "idle"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "contentScripts.bundle.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "injectedScript.bundle.js",
    "assets/256.png",
    "blocklist.html"
  ]
}
